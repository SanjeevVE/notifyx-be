# Application Settings
APP_NAME=Email Communication Platform
APP_VERSION=1.0.0
DEBUG=True

# Database (PostgreSQL)
# For local development with PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/email_platform
# For SQLite (development only):
DATABASE_URL=sqlite+aiosqlite:///./email_platform.db

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AWS SES Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
SES_SENDER_EMAIL=noreply@yourdomain.com

# Redis (for queue system)
REDIS_URL=redis://localhost:6379/0

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=["http://localhost:3000"]
